<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModelNovel"
            type="com.graytsar.wlnupdates.ui.novel.ViewModelNovel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_novel"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:backgroundTint="@color/colorPrimary"
            android:animateLayoutChanges="true" >


            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:toolbarId="@+id/toolbar_collapsing_novel"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"

                app:contentScrim="?attr/colorPrimary">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="?attr/actionBarSize">


                    <ImageView
                        android:id="@+id/image_novel_cover"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_wlnupdates_icon_white"
                        app:layout_collapseMode="parallax"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <TextView
                        android:id="@+id/textNovelTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="@{viewModelNovel.title}"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorTextToolbarPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/image_novel_cover"
                        app:layout_constraintTop_toTopOf="@+id/image_novel_cover" />

                    <TextView
                        android:id="@+id/textNovelAuthors"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="@{viewModelNovel.author}"
                        android:textSize="18sp"
                        android:textColor="@color/colorTextToolbarPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/image_novel_cover"
                        app:layout_constraintTop_toBottomOf="@+id/textNovelTitle" />

                    <TextView
                        android:id="@+id/textNovelRating"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="@{@string/novel_rating(viewModelNovel.rating)}"
                        android:textColor="@color/colorTextToolbarPrimary"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/image_novel_cover"
                        app:layout_constraintTop_toBottomOf="@+id/textNovelAuthors"
                        app:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_novel"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_width="match_parent"
                    >

                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/includeToolbarNovel"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

                <ProgressBar
                    android:id="@+id/progressBarNovel"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ScrollView
                    android:id="@+id/scrollView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textNovelDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/novel_description"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textNovelDescriptionContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="@{viewModelNovel.description}"
                            android:textColor="@color/colorTextSecondary"
                            android:textSize="18sp" />

                        <View
                            android:id="@+id/divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider" />

                        <include
                            android:id="@+id/layoutNovelChapters"
                            layout="@layout/item_novel_chapters" />


                        <TextView
                            android:id="@+id/textStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:gravity="center_vertical"
                            android:text="@{@string/novel_status(viewModelNovel.statusReleases)}"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="18sp"
                            tools:text="Status: " />

                        <TextView
                            android:id="@+id/textInitialPublishDate"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:gravity="center_vertical"
                            android:text="@{@string/novel_first_release_date(viewModelNovel.firstRelease)}"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="18sp"
                            tools:text="First Release:" />

                        <View
                            android:id="@+id/divider2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider" />

                        <include
                            android:id="@+id/layoutNovelGenre"
                            layout="@layout/item_novel_genre" />

                        <include
                            android:id="@+id/layoutNovelTag"
                            layout="@layout/item_novel_tags" />

                        <View
                            android:id="@+id/divider4"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider" />

                        <TextView
                            android:id="@+id/textTlType"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:gravity="center_vertical"
                            android:text="@{@string/novel_tl_type(viewModelNovel.tlType)}"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="18sp"
                            tools:text="Tl Type" />

                        <View
                            android:id="@+id/divider5"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider" />

                        <TextView
                            android:id="@+id/textDemographics"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:gravity="center_vertical"
                            android:text="@{@string/novel_demographic(viewModelNovel.demographic)}"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="18sp"
                            tools:text="Demographics: " />

                        <View
                            android:id="@+id/divider6"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider" />

                        <TextView
                            android:id="@+id/textCOO"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:gravity="center_vertical"
                            android:text="@{@string/novel_country_of_origin(viewModelNovel.countryOfOrigin)}"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="18sp"
                            tools:text="Country of Origin: " />

                        <TextView
                            android:id="@+id/textLanguage"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:gravity="center_vertical"
                            android:text="@{@string/novel_language(viewModelNovel.language)}"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="18sp"
                            tools:text="Language: " />

                        <TextView
                            android:id="@+id/textLicensed"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:gravity="center_vertical"
                            android:text="@{@string/novel_licensed(viewModelNovel.licensed)}"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="18sp"
                            tools:text="Licensed: " />

                        <View
                            android:id="@+id/divider10"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider" />

                        <include
                            android:id="@+id/layoutNovelIllustrator"
                            layout="@layout/item_novel_illustrator" />

                        <include
                            android:id="@+id/layoutNovelPublisher"
                            layout="@layout/item_novel_publisher" />

                        <View
                            android:id="@+id/divider13"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider" />

                        <TextView
                            android:id="@+id/textAlternativeNames"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical"
                            android:text="@string/novel_alternative_names"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/listAlternativeNames"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="@{viewModelNovel.alternativeNames}"
                            android:textColor="@color/colorTextPrimary">

                        </TextView>
                    </LinearLayout>
                </ScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
