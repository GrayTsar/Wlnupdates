<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModelNovel"
            type="com.graytsar.wlnupdates.ui.novel.ViewModelNovel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_novel"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:backgroundTint="@color/colorPrimary"
            android:animateLayoutChanges="true" >


            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:toolbarId="@+id/toolbar_collapsing_novel"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"

                app:contentScrim="?attr/colorPrimary">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="?attr/actionBarSize">


                    <ImageView
                        android:id="@+id/image_novel_cover"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/a2801"
                        app:layout_collapseMode="parallax"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/textNovelTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="@{viewModelNovel.title}"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorTextToolbarPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/image_novel_cover"
                        app:layout_constraintTop_toTopOf="@+id/image_novel_cover" />

                    <TextView
                        android:id="@+id/textNovelAuthors"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="@{viewModelNovel.author}"
                        android:textSize="18sp"
                        android:textColor="@color/colorTextToolbarPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/image_novel_cover"
                        app:layout_constraintTop_toBottomOf="@+id/textNovelTitle" />

                    <TextView
                        android:id="@+id/textNovelRating"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="@{@string/novel_rating(viewModelNovel.rating)}"
                        android:textColor="@color/colorTextToolbarPrimary"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/image_novel_cover"
                        app:layout_constraintTop_toBottomOf="@+id/textNovelAuthors"
                        app:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_novel"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_width="match_parent"
                    >

                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/includeToolbarNovel"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textNovelDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/novel_description"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textNovelDescriptionContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorTextSecondary"
                    android:text="@{viewModelNovel.description}" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <include
                    layout="@layout/item_chapters"
                    android:id="@+id/layoutNovelChapters"/>


                <TextView
                    android:id="@+id/textStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="18sp"
                    android:text="@{@string/novel_status(viewModelNovel.statusReleases)}"
                    tools:text="Status: "/>

                <TextView
                    android:id="@+id/textInitialPublishDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="18sp"
                    android:text="@{@string/novel_first_release_date(viewModelNovel.firstRelease)}"
                    tools:text="First Release:"/>

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <include
                    layout="@layout/item_genre"
                    android:id="@+id/layoutNovelGenre" />

                <include
                    layout="@layout/item_tags"
                    android:id="@+id/layoutNovelTag" />

                <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/textTlType"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="18sp"
                    android:text="@{@string/novel_tl_type(viewModelNovel.tlType)}"
                    tools:text="Tl Type"/>

                <View
                    android:id="@+id/divider5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/textDemographics"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="18sp"
                    android:text="@{@string/novel_demographic(viewModelNovel.demographic)}"
                    tools:text="Demographics: "/>

                <View
                    android:id="@+id/divider6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/textCOO"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="18sp"
                    android:text="@{@string/novel_country_of_origin(viewModelNovel.countryOfOrigin)}"
                    tools:text="Country of Origin: "/>

                <TextView
                    android:id="@+id/textLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="18sp"
                    android:text="@{@string/novel_language(viewModelNovel.language)}"
                    tools:text="Language: "/>

                <TextView
                    android:id="@+id/textLicensed"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="18sp"
                    android:text="@{@string/novel_licensed(viewModelNovel.licensed)}"
                    tools:text="Licensed: "/>

                <View
                    android:id="@+id/divider10"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <include
                    layout="@layout/item_illustrator"
                    android:id="@+id/layoutNovelIllustrator"/>

                <include
                    layout="@layout/item_publisher"
                    android:id="@+id/layoutNovelPublisher"/>

                <View
                    android:id="@+id/divider13"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/textAlternativeNames"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="@string/novel_alternative_names" />

                <TextView
                    android:id="@+id/listAlternativeNames"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/colorTextPrimary"
                    android:text="@{viewModelNovel.alternativeNames}">

                </TextView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
